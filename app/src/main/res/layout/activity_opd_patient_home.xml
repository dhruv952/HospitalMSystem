<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".OpdPatientHomeActivity">
<LinearLayout
    android:id="@+id/patient_list_header"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:background="@color/customBlue"
    android:orientation="horizontal"

    >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/Img_OpdBack"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/img_circle"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txt_HMS"
        android:text="HMS"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"


        />





</LinearLayout>

    <TextView
        android:id="@+id/txt_opd_bookApt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_list_header"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="90dp"
        android:background="@color/customBlue"
        android:gravity="center"
        android:padding="25dp"
        android:text="Book Appointment"
        android:textColor="@color/white"
        android:textSize="20sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_opd_viewApt"
        android:layout_below="@+id/txt_opd_bookApt"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="40dp"
        android:background="@color/customBlue"
        android:gravity="center"
        android:padding="25dp"
        android:text="View Appointment"
        android:textColor="@color/white"

        android:textSize="20sp"

        />

</RelativeLayout>

