<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecpAppoinmentActivity">
    <RelativeLayout
        android:id="@+id/Recp_Appointment_list_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/customBlue">

        <ImageButton
            android:id="@+id/Recp_Appointment_Img_Back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@color/customBlue"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Appointment's List"
            android:textColor="@color/white"
            android:textSize="20sp"

            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recp_Appointment_RV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Recp_Appointment_list_header"
        android:scrollbars="vertical" />

</RelativeLayout>